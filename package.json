{
  "name": "raminrezaei",
  "version": "5.1.2",
  "private": true,
  "scripts": {
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html --chrome-flags=\"--headless\"",
    "check-all": "npm run check-format && npm run check-lint && npm run check-types",
    "performance": "npm run build && npm run start & sleep 5 && npm run lighthouse",
    "check-lint": "eslint \"src/**/*.{ts,tsx,js}\" --max-warnings=0",
    "check-types": "tsc --pretty --noEmit --project ./",
    "dev-https": "next dev --experimental-https",
    "build:analyze": "ANALYZE=true next build",
    "check-format": "prettier . --check",
    "format": "prettier --write .",
    "dev": "next dev --turbopack",
    "lint": "eslint . --fix",
    "build": "next build",
    "start": "next start",
    "test": "jest"
  },
  "dependencies": {
    "@gsap/react": "^2.1.2",
    "@next/third-parties": "^16.0.1",
    "@sentry/nextjs": "^10.23.0",
