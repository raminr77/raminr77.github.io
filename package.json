    "gsap": "^3.13.0",
    "markdown-to-jsx": "^7.7.12",
    "next": "^15.4.2",
    "qs": "^6.14.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.60.0",
    "react-toastify": "^11.0.5"
