{
  "name": "raminrezaei",
  "version": "4.7.0",
  "private": true,
  "scripts": {
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html --chrome-flags=\"--headless\"",
    "check-all": "npm run check-format && npm run check-lint && npm run check-types",
    "performance": "npm run build && npm run start & sleep 5 && npm run lighthouse",
    "check-lint": "eslint ./src/* --ext ts --ext tsx --ext js",
    "check-types": "tsc --pretty --noEmit --project ./",
    "dev-https": "next dev --experimental-https",
    "build:analyze": "ANALYZE=true next build",
    "check-format": "prettier . --check",
    "format": "prettier --write .",
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint"
  },
  "dependencies": {
    "@gsap/react": "^2.1.2",
    "@next/third-parties": "^15.5.4",
    "@sentry/nextjs": "^10.14.0",
    "@vercel/speed-insights": "^1.2.0",
    "animate.css": "^4.1.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "gray-matter": "^4.0.3",
    "gsap": "^3.13.0",
    "markdown-to-jsx": "^7.7.13",
    "motion": "^12.23.19",
    "next": "^15.5.4",
    "qs": "^6.14.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.63.0",
    "react-toastify": "^11.0.5"
  },
  "lint-staged": {
    "**/*": [
      "prettier --write .",
      "tsc --pretty --noEmit --project ./",
      "eslint ./src/* --ext ts --ext tsx --ext js"
    ]
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^15.5.4",
    "@tailwindcss/postcss": "^4.1.13",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^24.5.2",
    "@types/qs": "^6.14.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/webpack-bundle-analyzer": "^4.7.0",
    "eslint": "^9.36.0",
    "eslint-config-next": "15.5.4",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lighthouse": "^12.8.2",
    "lint-staged": "^16.2.0",
    "postcss": "^8.5.6",
    "prettier": "3.6.2",
    "prettier-plugin-sort-imports": "^1.8.8",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "sass": "^1.93.1",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
