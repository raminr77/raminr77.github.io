{
  "name": "raminrezaei",
  "version": "5.1.1",
  "private": true,
  "scripts": {
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html --chrome-flags=\"--headless\"",
    "check-all": "npm run check-format && npm run check-lint && npm run check-types",
    "performance": "npm run build && npm run start & sleep 5 && npm run lighthouse",
    "check-lint": "eslint \"src/**/*.{ts,tsx,js}\" --max-warnings=0",
    "check-types": "tsc --pretty --noEmit --project ./",
    "dev-https": "next dev --experimental-https",
    "build:analyze": "ANALYZE=true next build",
    "check-format": "prettier . --check",
    "format": "prettier --write .",
    "dev": "next dev --turbopack",
    "lint": "eslint . --fix",
    "build": "next build",
    "start": "next start"
  },
  "dependencies": {
    "@gsap/react": "^2.1.2",
    "@next/third-parties": "^16.0.1",
    "@sentry/nextjs": "^10.22.0",
    "@vercel/speed-insights": "^1.2.0",
    "animate.css": "^4.1.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "gray-matter": "^4.0.3",
    "gsap": "^3.13.0",
    "markdown-to-jsx": "^8.0.0",
    "motion": "^12.23.24",
    "next": "^16.0.1",
    "qs": "^6.14.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-google-recaptcha-v3": "^1.11.0",
    "react-hook-form": "^7.65.0",
    "react-toastify": "^11.0.5"
  },
  "lint-staged": {
    "**/*": [
      "prettier --write .",
      "tsc --pretty --noEmit --project ./",
      "eslint \"src/**/*.{ts,tsx,js}\""
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@microsoft/eslint-formatter-sarif": "^3.1.0",
    "@next/eslint-plugin-next": "^16.0.1",
    "@tailwindcss/postcss": "^4.1.16",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^24.9.2",
    "@types/qs": "^6.14.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/webpack-bundle-analyzer": "^4.7.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lighthouse": "^13.0.1",
    "lint-staged": "^16.2.6",
    "postcss": "^8.5.6",
    "prettier": "3.6.2",
    "prettier-plugin-sort-imports": "^1.8.8",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "sass": "^1.93.2",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "webpack": "^5.102.1",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "browserslist": {
    "production": [
      "chrome >= 109",
      "edge >= 109",
      "firefox >= 102",
      "safari >= 16",
      "ios_saf >= 16"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "packageManager": "pnpm@10.20.0"
}
