    "markdown-to-jsx": "^8.0.0",
    "motion": "^12.23.24",
    "next": "^16.0.1",
    "qs": "^6.14.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-google-recaptcha-v3": "^1.11.0",
    "react-hook-form": "^7.66.0",
    "react-toastify": "^11.0.5"
