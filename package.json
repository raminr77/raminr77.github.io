    "jest-environment-jsdom": "^30.2.0",
    "lighthouse": "^13.0.1",
    "lint-staged": "^16.2.6",
    "postcss": "^8.5.6",
    "prettier": "3.6.2",
    "prettier-plugin-sort-imports": "^1.8.8",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "sass": "^1.93.3",
